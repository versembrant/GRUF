server {
    server_name cl2024011711001.dnssw.net;

    # Gruf main deployment
    location /gruf/static/ {
        alias /home/versembrant/versembrant-bruixit/static/;
    }
    location /gruf/ {
        include uwsgi_params;
        uwsgi_pass unix:/home/versembrant/versembrant-bruixit/versembrant_bruixit.sock;
    }

    # Gruf test deployment
    location /gruf-test/static/ {
        alias /home/versembrant/test/versembrant-bruixit/static/;
    }
    location /gruf-test/ {
        include uwsgi_params;
        uwsgi_pass unix:/home/versembrant/test/versembrant-bruixit/versembrant_bruixit.sock;
    }

    # Sonicpi main deployment
    location /sonicpi/static/ {
        alias /home/versembrant/sonicpi-renderer/django_app/static/;
    }
    location /sonicpi/worker1/streamer/ {
        proxy_pass              http://127.0.0.1:52010/;
        proxy_http_version      1.1;
        proxy_set_header        Connection "";      
    }
    location /sonicpi/worker1/controller/ {
        proxy_pass              http://127.0.0.1:52011/;
        proxy_http_version      1.1;
        proxy_set_header        Connection "";      
    }
    location /sonicpi/worker2/streamer/ {
        proxy_pass              http://127.0.0.1:52020/;
        proxy_http_version      1.1;
        proxy_set_header        Connection "";      
    }
    location /sonicpi/worker2/controller/ {
        proxy_pass              http://127.0.0.1:52021/;
        proxy_http_version      1.1;
        proxy_set_header        Connection "";      
    }
    location /sonicpi/ {
        include uwsgi_params;
        uwsgi_pass unix:/home/versembrant/sonicpi-renderer/django_app/versembrant-sonicpi-server.sock;
    }

    # Redirect from / to /gruf
    location / {
        rewrite (/.*)?$ /gruf$1 permanent;
    }

    # SSL configuration
    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/cl2024011711001.dnssw.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/cl2024011711001.dnssw.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}server {
    if ($host = cl2024011711001.dnssw.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80 default_server;
    listen [::]:80 default_server;

    server_name cl2024011711001.dnssw.net;
    return 404; # managed by Certbot
}