server {
    server_name cl2024011711001.dnssw.net;

    # Bruixit main deployment
    location /bruixit/static/dist/ {
        alias /home/versembrant/versembrant-bruixit/static/dist/;
    }
    location /bruixit/ {
        include uwsgi_params;
        uwsgi_pass unix:/home/versembrant/versembrant-bruixit/versembrant_bruixit.sock;
    }

    # Bruixit test deployment
    location /bruixit-test/static/dist/ {
        alias /home/versembrant/test/versembrant-bruixit/static/dist/;
    }
    location /bruixit-test/ {
        include uwsgi_params;
        uwsgi_pass unix:/home/versembrant/test/versembrant-bruixit/versembrant_bruixit.sock;
    }

    # Sonicpi main deployment
    location /sonicpi/static/dist/ {
        alias /home/versembrant/sonicpi-renderer/static/dist/;
    }
    location /sonicpi/worker/1/ {
        proxy_pass              http://127.0.0.1:5201/sonicpi/worker/1/;
        proxy_http_version      1.1;
        proxy_set_header        Connection "";      
    }
    location /sonicpi/worker/2/ {
        proxy_pass              http://127.0.0.1:5202/sonicpi/worker/2/;
        proxy_http_version      1.1;
        proxy_set_header        Connection "";      
    }
    location /sonicpi/ {
        include uwsgi_params;
        uwsgi_pass unix:/home/versembrant/sonicpi-renderer/versembrant-sonicpi-server.sock;
    }

    # SSL configuration
    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/cl2024011711001.dnssw.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/cl2024011711001.dnssw.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}server {
    if ($host = cl2024011711001.dnssw.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80 default_server;
    listen [::]:80 default_server;

    server_name cl2024011711001.dnssw.net;
    return 404; # managed by Certbot
}